{
  "extends": ["config:recommended"],
  "semanticCommits": "enabled",
  "enabledManagers": ["npm", "dockerfile"],
  "branchPrefix": "deps/",
  "timezone": "Europe/Berlin",
  "schedule": ["at any time"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },

  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "semanticCommitType": "chore",
      "matchPackageNames": ["*"]
    },
    {
      "matchPackagePatterns": ["fastify", "fastify-plugin", "@fastify/*"],
      "groupName": "Fastify Core"
    },
    {
      "matchPackageNames": ["pino", "pino-pretty"],
      "groupName": "Logging"
    },
    {
      "matchPackageNames": ["commander", "dotenv"],
      "groupName": "CLI and Utils"
    },
    {
      "matchPackageNames": ["bcrypt", "@types/bcrypt"],
      "groupName": "Security"
    },
    {
      "matchPackageNames": ["eslint", "@sap/eslint-config", "prettier"],
      "groupName": "Linting Tools"
    },
    {
      "matchPackageNames": ["typescript", "ts-jest", "tsx", "tsc-alias", "@tsconfig/node22"],
      "groupName": "TypeScript Build Tools"
    },
    {
      "matchPackageNames": [
        "jest",
        "jest-cli",
        "jest-junit",
        "jest-fetch-mock",
        "jest-watch-typeahead",
        "@types/jest",
        "@types/js-yaml"
      ],
      "groupName": "Testing Frameworks"
    },
    {
      "matchPackageNames": ["rimraf", "husky", "is-ci", "lint-staged"],
      "groupName": "Misc Tools"
    },
    {
      "groupName": "Docker Dependencies",
      "matchCategories": ["dockerfile"],
      "enabled": true
    }
  ]
}
