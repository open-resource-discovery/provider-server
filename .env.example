# Base params
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ORD_BASE_URL=http://127.0.0.1:8080
ORD_SOURCE_TYPE=local
ORD_DIRECTORY=./example
ORD_DOCUMENTS_SUBDIRECTORY=documents
ORD_AUTH_TYPE=open

# Optional: Github configuration
GITHUB_TOKEN=
GITHUB_API_URL=https://api.github.com
GITHUB_REPOSITORY=owner/repo
GITHUB_BRANCH=main

# Github static file serving configuration
ORD_DATA_DIR=./data
WEBHOOK_SECRET=
UPDATE_DELAY=30
STATUS_DASHBOARD_ENABLED=true

# BASIC_AUTH: JSON string mapping usernames to hashed bcrypt passwords.
# User: `admin`, password: `secret`
BASIC_AUTH='{"admin":"$2y$10$EwsT83iCpr/4r/pJj0G53eNk8fZ/Ldb8TDiuou7ciL8MgsaS4Xd.2"}'

# mTLS Configuration (Paths are relative to the application root)
# Example:
# MTLS_CA_PATH=./certs/ca.pem
# MTLS_CERT_PATH=./certs/server.crt
# MTLS_KEY_PATH=./certs/server.key
# MTLS_REJECT_UNAUTHORIZED=true #(set to 'false' to allow unauthorized certs, not recommended for production)
MTLS_CA_PATH=
MTLS_CERT_PATH=
MTLS_KEY_PATH=
MTLS_REJECT_UNAUTHORIZED=true

# MTLS_MODE: Set to 'sap:cmp-mtls' for Cloud Foundry environments with proxy-based mTLS, 'standard' for direct TLS (default: standard)
MTLS_MODE=standard
# MTLS_TRUSTED_ISSUERS: Semicolon-separated list of trusted certificate issuers (DNs)
# Example: CN=Example Platform CA,OU=Platform Clients,O=Example Corp,L=cf-us-west,C=US;CN=Example Root CA,O=Example Corp,L=San Francisco,C=US
MTLS_TRUSTED_ISSUERS=
# MTLS_TRUSTED_SUBJECTS: Semicolon-separated list of trusted certificate subjects (DNs)
# Example: CN=api-client-dev,OU=Platform Clients,OU=Development,O=Example Corp,L=Dev,C=US
MTLS_TRUSTED_SUBJECTS=
# MTLS_CONFIG_ENDPOINTS: Semicolon-separated list of URLs to fetch certificate configuration from
# Example: https://dev.example.com/mtls-certs;https://stage.example.com/certs
# The endpoints should return JSON with "certIssuer" and "certSubject" fields
MTLS_CONFIG_ENDPOINTS=
# MTLS_DECODE_BASE64_HEADERS: Whether to decode base64-encoded headers (default: true for SAP CF)
MTLS_DECODE_BASE64_HEADERS=true
