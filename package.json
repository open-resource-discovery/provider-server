{
  "name": "@open-resource-discovery/provider-server",
  "version": "0.10.1",
  "description": "A CLI application or server that takes multiple ORD documents and other metadata files and exposes them as a ORD Provider implementation (ORD Document API)",
  "engines": {
    "node": ">=22.8.0",
    "npm": ">=10.8.2"
  },
  "type": "module",
  "bin": "dist/src/cli.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "prepublishOnly": "npm run build",
    "deploy": "npm run build && npm prune --production && cf login -a https://api.cf.sap.hana.ondemand.com -o CORE_CF -s open-discovery && cf push && npm install",
    "start": "node dist/src/cli.js",
    "dev": "tsx watch ./src/cli.ts",
    "eslint": "eslint . --fix",
    "eslint:ci": "eslint .",
    "prettier": "prettier --write \"**/*.{json,yml,yaml,md}\"",
    "prettier:ci": "prettier --check \"**/*.{json,yml,yaml,md}\"",
    "format": "npm run prettier && npm run eslint",
    "test:ci": "jest --ci --collectCoverage",
    "test:watch": "jest --watchAll",
    "test": "npm run test:ci",
    "coverage": "jest --coverage --maxWorkers=1",
    "prepare": "[ ! -z \"$CF_INSTANCE_IP\" ] || is-ci || husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-resource-discovery/provider-server.git"
  },
  "author": "SAP SE",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/auth": "5.0.3",
    "@fastify/basic-auth": "6.2.0",
    "@fastify/cors": "11.1.0",
    "@fastify/etag": "6.1.0",
    "@fastify/static": "8.2.0",
    "@fastify/websocket": "11.2.0",
    "@octokit/rest": "22.0.0",
    "@open-resource-discovery/specification": "1.12.3",
    "bcryptjs": "3.0.2",
    "commander": "14.0.1",
    "dotenv": "17.2.3",
    "fastify": "5.6.1",
    "fastify-plugin": "5.1.0",
    "fastify-raw-body": "5.0.0",
    "isomorphic-git": "1.34.0",
    "p-limit": "7.1.1",
    "pino": "10.0.0",
    "pino-pretty": "13.1.2"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@sap/eslint-config": "0.4.0",
    "@tsconfig/node22": "22.0.2",
    "@types/got": "9.6.12",
    "@types/jest": "30.0.0",
    "@types/js-yaml": "4.0.9",
    "@types/ws": "8.18.1",
    "@types/node": "24.7.2",
    "eslint": "9.37.0",
    "fetch-mock": "12.5.4",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jest": "30.2.0",
    "jest-cli": "30.2.0",
    "jest-fetch-mock": "3.0.3",
    "jest-junit": "16.0.0",
    "jest-watch-typeahead": "3.0.1",
    "lint-staged": "16.2.4",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "ts-jest": "29.4.5",
    "tsc-alias": "1.8.16",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "./**/*.{js,ts}": [
      "eslint --quiet"
    ],
    "**/*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
